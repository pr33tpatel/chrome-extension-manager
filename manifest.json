{
  "manifest_version": 3,
  "name": "RedSage Extension Manager",
  "version": "1.0",
  "description": "Enable/Disable extensions using keyboard shortcuts.",
  "permissions": [
    "management",
    "storage",
    "notifications"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "toggle-extension": {
      "suggested_key": {
        "default": "Ctrl+Shift+E"
      },
      "description": "Toggle Extension On/Off"
    }
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/redsage16.png",
      "32": "assets/redsage32.png",
      "48": "assets/redsage48.png",
      "128":"assets/redsage128.png"
    }
  },
  "host_permissions": [
    "<all_urls>"
  ]
}
